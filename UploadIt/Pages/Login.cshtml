@page
@model UploadIt.Pages.LoginModel
@{
}

@section scripts{ 
    <script src="~/scripts/Login.js" type="module"></script>
}

@section styles{ 
    <link href="~/styles/Forms.css" rel="stylesheet" />
}

<div class="col-md-8 offset-2">
    <div class="col-md-4 offset-4 form-wrapper">
        <div class="text-dark text-center">
            <h3>Login to UploadIt</h3>
        </div>
        <form id="login_form" method="post">
            <div class="form-group">
                <input class="form-control" asp-for="Username" type="text" placeholder="Username"/>
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" type="password" placeholder="Password"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark btn-block">Login</button>
                <span class="text-danger" id="login_form_status"></span>
            </div>
            <div class="form-group">
                <a href="Register">
                    <small class="text-dark">Don't have an account? Create one.</small>
                </a>
            </div>
        </form>
    </div>
</div>