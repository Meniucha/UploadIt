@page
@model UploadIt.Pages.RegisterModel
@{
}

@section scripts{ 
    <script src="~/scripts/Register.js" type="module"></script>
}

@section styles{ 
    <link href="~/styles/Forms.css" rel="stylesheet" />
}

<div class="col-md-8 offset-2">
    <div class="col-md-4 offset-4 form-wrapper">
        <div class="text-dark text-center">
            <h3>Register</h3>
        </div>
        <form id="register_form" method="post">
            <div class="form-group">
                <input class="form-control" asp-for="Email" type="text" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Username" type="text" placeholder="Username" />
                <span asp-validation-for="Username"></span>
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" type="password" placeholder="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-dark btn-block">Create account</button>
                <span class="text-danger" id="login_form_status"></span>
            </div>
        </form>
    </div>
</div>